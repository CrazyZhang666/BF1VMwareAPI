<UserControl
    x:Class="BF1VMwareAPI.Views.LogView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://wpf.microsoft.com/ui/2025/xaml"
    d:DesignHeight="400"
    d:DesignWidth="600"
    DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <WrapPanel Margin="0,-5,0,0">
            <TextBlock
                Margin="5"
                VerticalAlignment="Center"
                FontWeight="Bold"
                Text="日志等级:" />
            <!--  //////////  -->
            <RadioButton
                x:Name="RadioButton_LogLevel_Trace"
                Checked="RadioButton_LogLevel_Checked"
                Content="Trace"
                GroupName="LogLevel" />
            <RadioButton
                x:Name="RadioButton_LogLevel_Debug"
                Checked="RadioButton_LogLevel_Checked"
                Content="Debug"
                GroupName="LogLevel" />
            <RadioButton
                x:Name="RadioButton_LogLevel_Info"
                Checked="RadioButton_LogLevel_Checked"
                Content="Info"
                GroupName="LogLevel"
                IsChecked="True" />
            <RadioButton
                x:Name="RadioButton_LogLevel_Warn"
                Checked="RadioButton_LogLevel_Checked"
                Content="Warn"
                GroupName="LogLevel" />
            <RadioButton
                x:Name="RadioButton_LogLevel_Error"
                Checked="RadioButton_LogLevel_Checked"
                Content="Error"
                GroupName="LogLevel" />
            <RadioButton
                x:Name="RadioButton_LogLevel_Fatal"
                Checked="RadioButton_LogLevel_Checked"
                Content="Fatal"
                GroupName="LogLevel" />
        </WrapPanel>

        <ListView
            x:Name="ListView_Logger"
            Grid.Row="1"
            Margin="5,0,5,5"
            ItemsSource="{Binding ObsCol_LogInfos}">
            <ListView.View>
                <GridView ColumnHeaderContainerStyle="{StaticResource GridViewColumnHeaderStyle}">
                    <GridViewColumn
                        Width="60"
                        DisplayMemberBinding="{Binding Time}"
                        Header="时间" />
                    <GridViewColumn
                        Width="50"
                        DisplayMemberBinding="{Binding Level}"
                        Header="等级" />
                    <GridViewColumn
                        Width="450"
                        DisplayMemberBinding="{Binding Message}"
                        Header="日志" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>

</UserControl>